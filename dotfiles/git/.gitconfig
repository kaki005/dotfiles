[alias]
    st = status
    # add したあとにstatus
    adds = !git add \"$@\" && git status
	# いい感じのグラフでログを表示
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	# 上の省略形
    gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    resf = reset --soft HEAD^
    resh = reset --hard HEAD^
    rmc = rm -r --cached .
    rmlocal = clean -df
    # log
    l = log --graph --date=short
    changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
    short = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\"
    simple = log --pretty=format:\" * %s\"
    # エイリアス一覧表示
    aliases = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort

[core]
    quotepath=false # 日本語ファイル名をエンコードしない
    editor = nvim
    # You almost always want autocrlf=input unless you really know what you are doing.
	autoCRLF = false


# color
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green



[init]
  defaultBranch = main
[pull]
  rebase = false
  ff = only
[commit]
  tamplate = $HOME/dotfiles/dotfiles/git/.ciommit_template
  verbose=true
[push]
    default = current
    autoSetupRemote = true

# merge
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false

# delta: diffに色を付ける
[diff "bin"]
  textconv = hexdump -v -C
[difftool]
  prompt = true
  trustExitCode = true

[pager]
    diff = delta
    side-by-side = true # 横に並べる
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only
[delta]
  diff-so-fancy=true
  keep-plus-minus-markers=true
  minus-emph-style="bold 94 89"
  plus-emph-style="bold 29 29"
  hunk-header-style="omit"
  line-numbers=true

[help]
autocorrect = 1

[credential]
    helper=store
[http]
    postBuffer=524288000
[ghq]
  root = ~/Documents/Git
